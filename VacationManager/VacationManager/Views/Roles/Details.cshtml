@model VacationManager.Models.RoleModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Role: @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Users:</dt>
        <dd class="col-sm-10">
            @foreach (var user in Model.Users)
            {
                <div>@user.FirstName @user.LastName</div>
            }
        </dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" onclick="return confirmDeleteOrEdit('@Model.Name')">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDeleteOrEdit(roleName) {
            if (roleName === "CEO" || roleName === "Developer" || roleName === "Team Lead" || roleName === "Unassigned") {
                alert("This role cannot be deleted or edited.");
                return false;
            }
            return true;
        }
    </script>
}