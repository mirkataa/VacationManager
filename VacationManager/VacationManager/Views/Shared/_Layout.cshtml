<!DOCTYPE html>
<html lang="en">
<head>
    @inject VacationManager.Data.ApplicationDbContext _context
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VacationManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VacationManager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>VacationManager 🏖️</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-info" asp-area="" asp-controller="Home" asp-action="Index"><b>HOME</b></a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.Identity.Name != "dummyCEO")
                            {
                                var username = User.Identity.Name;
                                var loggedPerson = _context.Users.SingleOrDefault(u => u.Username == username);
                                if(loggedPerson.RoleId == 1 || loggedPerson.RoleId == 3)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-info" asp-area="" asp-controller="Teams" asp-action="Index"><b>TEAMS</b></a>
                                    </li>
                                }
                                if(loggedPerson.RoleId == 1)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-info" asp-area="" asp-controller="Projects" asp-action="Index"><b>PROJECTS</b></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-info" asp-area="" asp-controller="Roles" asp-action="Index"><b>ROLES</b></a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-info" asp-area="" asp-controller="Users" asp-action="Index"><b>USERS</b></a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-area="" asp-controller="LeaveRequests" asp-action="Index"><b>LEAVE REQUEST</b></a>
                                </li>
                                if(loggedPerson.RoleId == 1)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-info" asp-area="" asp-controller="VacationDays" asp-action="Index"><b>VACATION DAYS</b></a>
                                    </li>
                                }
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - VacationManager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
