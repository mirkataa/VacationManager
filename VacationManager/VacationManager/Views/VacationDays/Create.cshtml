@inject VacationManager.Data.ApplicationDbContext _context
@model VacationManager.Models.VacationDaysModel

@{
    ViewData["Title"] = "Create";
    var username = User.Identity.Name;
    var loggedPerson = _context.Users.SingleOrDefault(u => u.Username == username);
    if (loggedPerson.RoleId != 1)
    {
        <script>
            window.location.href = "/Home/Index";
        </script>
    }
}

<head>
    <link rel="stylesheet" href="~/css/TeamEdit.css" />
</head>

<div class="container">
    <div class="form-container">
        <h1 align="center">ADD</h1>
        <h1 align="center">VACATION DAYS</h1>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select asp-for="UserId" class="form-control">
                    <option value="">-- Select User --</option>
                    @foreach (var userOption in ViewBag.UserOptions)
                    {
                        <option value="@userOption.Value">@userOption.Text</option>
                    }
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                @Html.DropDownList("Year", ViewBag.SelectableYears as IEnumerable<SelectListItem>, "-- Select Year --", new { @class = "form-control" })
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VacationDays" class="control-label">Vacation Days</label>
                <input asp-for="VacationDays" class="form-control" />
                <span asp-validation-for="VacationDays" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="UsedDays" class="control-label"></label>
                <input asp-for="UsedDays" class="form-control" />
                <span asp-validation-for="UsedDays" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="PendingDays" class="control-label"></label>
                <input asp-for="PendingDays" class="form-control" />
                <span asp-validation-for="PendingDays" class="text-danger"></span>
            </div>
            <div class="form-footer">
                <div>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
